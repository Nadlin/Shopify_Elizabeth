
<div class="flex flex-col items-center my-8">
    {% if section.settings.contact_form_title != blank %}
        <h2 class="text-3xl font-medium my-8 md:my-16">{{ section.settings.contact_form_title }}</h2>
    {% endif %}
    {% form 'contact' %}
        {{ form.errors | default_errors }}
        {% if form.posted_successfully? %} Thank you for your contact {% endif %}
        <div class="max-w-6xl mx-auto justify-center flex-1 items-center px-4">
            <div class="flex px-1 mb-3">
                <div class="px-3 md:w-1/2">
                    <label class="uppercase text-xs text-gray-500 font-medium" for="contact_name">Name</label>
                    <input class="border py-3 px-4 mb-3 text-gray-700 w-full" type="text" name="contact[name]" id="contact_name">
                </div>
                <div class="px-3 md:w-1/2">
                    <label class="uppercase text-xs text-gray-500 font-medium" for="contact_email">Email</label>
                    <input class="border py-3 px-4 mb-3 text-gray-700 w-full" type="email" name="contact[email]" id="contact_email" required>
                </div>
                
            </div>
            <div class="flex-px-1 mb-3">
                <div class="w-full px-3">
                    <label for="contact_message">Message</label>
                    <input type="textarea" name="contact[body]" id="contact_message" class="border py-3 px-4 mb-3 text-gray-700 w-full">
                </div>
            </div>

            <div class="flex px-1 mb-3">
                <div class="w-full px-3">
                    <input type="submit" value="Submit" class="w-full cursor-pointer px-4 py-2 border text-base font-medium bg-gray-900 text-white hover:bg-gray-700"> 
                </div>
            </div>
        </div>
    {% endform %}
</div>

{% schema %}
{
    "name": "Contact Form",
    "settings": [
        {
            "type": "text",
            "id": "contact_form_title",
            "label": "Title"
        }
        
    ],
    "presets": [
        {
            "name": "Contact Form"
        }
    ]      
}
{% endschema %}