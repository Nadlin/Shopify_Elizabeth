<div class="max-w-7xl mx-auto my-8">
    <h1 class="font-medium text-3xl text-center">{{ section.settings.collections_title }}</h1>
    <div class="grid grid-cols-1 md:grid-cols-3 gaps-4">
        {% for collection in collections %}
            {% if collection.all_products_count > 0 %}
                <div class="w-full py-6 px-3">
                    <div class="border bg-white overflow-hidden">
                        <a href="{{ collection.url }}">
                            <div class="h-80 overflow-hidden">
                                {% if collection.featured_image != blank %}
                                    {% assign col_image = collection.featured_image %}
                                {% else %}
                                    {% assign col_image = collection.products.first.featured_image %}
                                            
                                {% endif %}
                                <img src="{{ col_image |  image_url: width: 400 }}" 
                                        alt="{{ collection.title |  escape }}" 
                                        width="{{ col_image.width }}" 
                                        height="{{ col_image.height }}"
                                        class="w-full h-full object-cover transition duration-1000 ease-in-out transform hover:scale-105" >
                            </div>
                        </a>
                        <div class="p-4 bg-gray-100"><h2 class="text-lg">{{ collection.title }}</h2></div>                   
                    </div>
                    
                </div>
            {% endif %}
        {% endfor %}
    </div>
 
</div>

{% schema %}
{
    "name": "Collections Template",
    "settings": [
        {
            "type": "text",
            "id": "collections_title",
            "default": "Collections",
            "label": "Title"
        }
    ]
}
{% endschema %}