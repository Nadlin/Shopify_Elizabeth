<div class="flex flex-col items-center my-8">
    <h1 class="text-center text-3xl my-5">{{ section.settings.featured_title }}</h1>
    <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            {% for product in section.settings.featured_collection.products limit:section.settings.product_limit %}
                {% render 'product-card', product: product %}
            {% endfor %}
        </div>
    </div>
</div>



{% schema %}
{
    "name": "Featured Products",
    "settings": [
        {
            "type": "text",
            "id": "featured_title",
            "label": "Title",
            "default": "Featured Products"
        },
        {
            "type": "collection",
            "id": "featured_collection",
            "label": "Collection"
        },
        {
            "type": "range",
            "id": "product_limit",
            "label": "Number of products to display in Collection",
            "default": 4,
            "min": 4,
            "max": 16
        }
    ],
    "presets": [
        {
            "name": "Featured Products",
            "settings": {
                "featured_title": "Featured ..."
            }
        }
    ]   
}
{% endschema %}