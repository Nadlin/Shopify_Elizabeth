<div class="max-w-md">
    <div class="text-5xl font-bold my-4">
        {{ section.settings.title }}
    </div>
    <div class="my-4 t">
        <p class="text-base md:text-xl leading-normal">{{ 'general.404.subtext_html' | t }}</p>
    </div>
    
    <div class="my-4 t my-5 w-4">
        {% if section.settings.button_url == blank %}
            {% assign shop_url = shop.secure_url %}    
        {% else %}
            {% assign shop_url = section.settings.button_url %}
        {% endif %}
        <a href="{{ shop_url }}" class="px-4 inline py-2 text-base font-medium shadow bg-green-600 hover:bg-green-800 text-white">{{ section.settings.button }}</a>
    </div>
</div>

{% schema %}
{
  "name": "Template 404",
  "tag": "section",
  "class": "flex items-center justify-center text-center py-7 h-screen",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title for 404 page",
      "default": "404 Page",
      "info": "Here you can change the title for 404 page"
    },
    {
      "type": "liquid",
      "id": "content",
      "label": "Content for 404 page",
      "default": "{{ 'general.404.subtext_html' | t }}",
      "info": "Here you can change content for 404 page"
    },
    {
      "type": "text",
      "id": "button",
      "label": "Button label",
      "default": "Back to Home page"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ]
}
{% endschema %}